<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/text_review_therma_patient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/fc_white"
        android:background="@color/fc_blue"
        android:textSize="25sp"
        android:layout_gravity="start"/>

    <ProgressBar android:id="@+id/progress_card_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical" />

    <com.jjoe64.graphview.GraphView android:id="@+id/graph_review_therma"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

    <ListView android:id="@+id/list_review_therma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />
</LinearLayout>