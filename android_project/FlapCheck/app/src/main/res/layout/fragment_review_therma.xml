<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/text_review_therma_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/fc_white"
        android:textSize="25sp"
        android:background="@color/fc_blue"
        android:text="@string/text_review_therma_heading"
        android:gravity="center_horizontal"/>

    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="1"-->
        <!-->-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ca.utoronto.flapcheck.RegionSelectImageView
                android:id="@+id/region_image_review_therma"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:layout_margin="5dp"
                />

            <ProgressBar android:id="@+id/progress_review_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical" />

            <com.jjoe64.graphview.GraphView android:id="@+id/graph_review_therma"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView android:text="Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_weight="1"/>

                <TextView android:text="Time post-op"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_weight="1"/>

                <TextView android:text="Temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_weight="1"/>
            </LinearLayout>

            <ListView android:id="@+id/list_review_therma"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_height="0dp"
                android:layout_weight="0.25"/>

        </LinearLayout>
    <!--</ScrollView>-->
</LinearLayout>
