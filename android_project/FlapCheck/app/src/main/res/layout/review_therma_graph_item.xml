<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView android:id="@+id/text_therma_status"
        android:text="There are no readings for this measurement point."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_horizontal|center_vertical"
        />

    <com.jjoe64.graphview.GraphView android:id="@+id/graph_review_therma"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="5dp"
        />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView  android:id="@+id/text_review_therma_heading_date"
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_weight="1"/>

        <TextView android:id="@+id/text_review_therma_heading_time"
            android:text="Time post-op"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_weight="1"/>

        <TextView android:id="@+id/text_review_therma_heading_temp"
            android:text="Temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>