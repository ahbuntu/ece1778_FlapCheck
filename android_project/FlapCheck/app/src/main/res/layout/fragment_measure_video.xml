<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="ca.utoronto.flapcheck.MeasureVideoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/take_video_instructions"
            android:gravity="center"
            />

        <Button
            android:id="@+id/button_take_video"
            android:text="@string/take_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fc_blue"
            android:layout_gravity="center"
            />
    </LinearLayout>

</FrameLayout>
